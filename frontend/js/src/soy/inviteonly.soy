{namespace jamout.templates.InviteOnly}

/**
 * Main Frame
 */
{template .frame}
<div class="container">

   
        
                <div ng-controller="InviteOnlyCtrl">
                 <div class="inviteonly">
                  <div class="container">
                    <div class="col-sm-7 col-md-4 col-sm-offset-3 col-md-offset-4">

                       <form name="InviteOnlyForm" class="form-inviteonly" novalidate>
                         <div id="jamoutGifLogo"></div>
                         <h2 class="inviteonly-title">PRE LAUNCH <br>HYPE!!!</h2>
                                    
                                    <p> <span ng-bind="error"></span></p>


                                    <input 
                                    class="form-control" 
                                    name="secret" 
                                    ng-model="inviteonlyModel.userInput"
                                    type="password" 
                                    placeholder="Enter the secret to unlock JamOut" 
                                    required/>
                                     
                                
                                    <button type="submit" class="btn  btn-primary btn-lg btn-block" ng-disabled="InviteOnlyForm.$invalid" ng-click='verify(inviteonlyModel)'/> UNLOCK </button>
                                        
                                        <p class="inviteonly-or">
                                        <strong> OR </strong></p>

                                        <button class="btn btn-success-pink btn-lg btn-block" ng-click="redirectRequestPage()"><strong>Request Access</strong></button>
                                        
                        </form>
                      </div>
                  </div>
                </div>
             </div>
           
         
</div>
{/template}

