{namespace jamout.templates.Profile}

/**
 * Main Frame
 */
{template .frame}
<!-- TODO: ERROR HANDLING -->
 <div ng-controller="profileCtrl">
 	

   	<div class="row">
	
	
		<div class="col-xs-8  col-sm-10 col-md-6 col-lg-6 col-xs-offset-2 col-sm-offset-1 col-md-offset-3 col-lg-offset-3">
			<div class="user-profile">
			  
					
					<a ng-href="/profile/{{'edit'}}" id="edit">Edit</a>
						
					    <!-- <img src="/images/admin.png"> User -->
																
					    
						<h1><strong ng-bind="welcome"></strong></h1>
						
						
						<h2> <strong ng-bind="about"></strong></h2>
						<h2><span ng-bind="location"></span></h2>
						<h2 id="url"><span ng-bind="url"></span></h2>
						<h2><span ng-bind="created"> </span></h2>
				     
		 	</div>
		 </div>
		 
    </div>
 </div>

    <!--- Broadcast form --> 
	  <div ng-controller="roomCtrl">
	   <div class="container">
		<div class="row">
			<div class="col-sm-10 col-md-6 col-lg-6 col-sm-offset-1 col-md-offset-3 col-lg-offset-3">
		     
				<form class="broadcast-form">
				<fieldset>
				<h2 class="form-signin-heading"><strong>Let's get started</strong></h2>
				
				<p><strong>1. </strong>Enter a title</p>
				
				<div class="control group">
				<input 
				name="title" 
				type="text" 
				class="form-control"  
				ng-model="roomModel.title" 
				placeholder="e.g. hanging out with the fam, creating, thriving, etc." 
				name="name">
				</div>

				<p><strong>2. </strong>Click "Stream my webcam" to start a live stream. </p>

				<button type="submit" class="btn btn-lg btn-success-pink btn-block"  ng-click='create(roomModel)'/> Stream my webcam </button>


				</fieldset>
				</form>
			  
			</div>
		 </div>
	   </div>	
	</div>
			

{/template}
