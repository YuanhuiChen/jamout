{namespace jamout.templates.broadcastForm}

/**
* Main Frame
*/
{template .frame}
  <div ng-controller="roomCreateCtrl">
    <div class="container">
		<div class="row">
			<div class="col-sm-10 col-md-6 col-lg-6 col-sm-offset-1 col-md-offset-3 col-lg-offset-3">
		     
				<form name="broadcastForm" class="broadcast-form" novalidate>
				<fieldset>
				<h2 class="broadcast-form__primary-text">When you're ready</h2>
				
				<p><strong>1. </strong>Enter a title</p>
				
				
				<span class="help-block" ng-show="submitted && broadcastForm.title.$error.required">The title is required</span>
				<span class="help-block" ng-show="broadcastForm.title.$error.maxlength">Title is too long :(</span>
				<div class="control group">
				
				<input 
				name="title" 
				type="text" 
				class="form-control"  
				ng-model="roomModel.title" 
				placeholder="e.g. ~~*~*~*something interesting*~*~*~~" 
				name="name"
				ng-maxlength="40"
				required/>
				</div>
				<p><span ng-bind="error"></span></p>
				<p><strong>2. </strong>Click "Stream my webcam!" to start streaming live. </p>
				<li>Open the room url in a new tab to test your stream ♪☆(♥‿♥)☆♪</li>
				<li>Checkout faq if you need further help Ｏ(≧▽≦)Ｏ</li>
				<br>

				<button type="submit" class="btn btn-lg btn-success-pink btn-block" ng-disabled="broadcastForm.title.$error.maxlength" ng-click='create(roomModel)'/>Stream my webcam! </button>


				</fieldset>
				</form>
			  
			</div>
		 </div>
	   </div>	
	 </div>

{/template}