{namespace jamout.templates.InviteFriend}

/** 
* Main Frame
*/
{template .frame}
<div class="container">
		<div ng-controller="inviteFriendCtrl">
			<div class="container">
    
                    <div class="col-sm-7 col-md-6 col-lg-5 col-sm-offset-3 col-md-offset-3 col-lg-offset-4">
                       <form name="InviteFriendForm" class="invitefriend-form">
                        
                                    <h4>If you have any rad friends, invite them!</h4>
                                    <p> <span ng-bind="success"></span></p>
                                    <p> <span ng-bind="error"></span></p>


                                    <input 
                                    class="form-control" 
                                    name="name" 
                                    type="text" 
                                    ng-model="inviteFriendModel.name"
                                    placeholder="Name" 
                                    required/>
                                     

                                    <input 
                                    class="form-control" 
                                    name="email" 
                                    ng-model="inviteFriendModel.email"
                                    type="email" 
                                    placeholder="email@example.com" 
                                    required/>
                                
                                    <button type="submit" class="btn btn-primary btn-lg btn-block" ng-disabled="InviteFriendForm.$invalid"  ng-click='submit(inviteFriendModel)'/> Send Invitation</button>
                                        
                                        
                        </form>
                      </div>
                  </div>
		</div>
</div>
{/template}